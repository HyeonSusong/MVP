<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reply">

	<insert id="add" parameterType="net.hb.crud.ReplyDTO">
	  insert into hobby_reply
	  values( rhobby_seq.nextVal, #{rwriter}, #{rmemo}, #{hobby_idx})     
	</insert>
	
	<select id="selectAll"  parameterType="int" resultType="net.hb.crud.ReplyDTO">
		select * from  hobby_reply where hobby_idx=#{hobby_idx} 
	</select>

	<select id="countAll" parameterType="int" resultType="int">
		select count(*) from  hobby_reply where hobby_idx=#{hobby_idx} 
	</select>
		
	<update id="edit" parameterType="net.hb.crud.ReplyDTO">
		update hobby_reply set rwriter=#{rwriter}, rmemo=#{rmemo} where rhobby_idx=#{rhobby_idx}
	</update>
	
	<delete id="delete" parameterType="int">
	   delete from  hobby_reply where rhobby_idx = #{rhobby_idx} 
	</delete>

</mapper>